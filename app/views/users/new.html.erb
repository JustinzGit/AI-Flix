<%= javascript_pack_tag 'sessions' %>

<div data-w-id="02ff14d7-240d-bc19-0eb3-44418700514b" id="preloader">
  <h1 class="white-heading">Welcome to AI-Flix</h1>
  <h3 class="white-heading">Give Us A Moment To Grab Some Stuff</h3>
  <div class="progress-6"></div>
</div>

<div class="theater-background">
  <h1 class="logo">AI-FLIX</h1>
  <div class="black-background">
    <div class="form w-form">

    <%= form_with model: @user, class: "form" do |f| %>
      <h1 class="heading">Sign up</h1>
      <%= f.label :username, class: "form-label"  %>
      <%= f.text_field :username, class: "text-field w-input" %>

      <%= f.label :email, class: "form-label"  %>
      <%= f.text_field :email, class: "text-field w-input" %>

      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "text-field w-input" %>

      <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "text-field w-input" %>

      <%= f.submit "Signup", class: "submit-button w-button" %>
    <% end %>

    <div class="bottom-form-text">
      <div class="grey-text">Have an account?</div>
      <%= link_to("Log In", login_path, class: "form-link") %>
    </div>

    <%= display_form_errors(@user) %>
    </div>
  </div>
