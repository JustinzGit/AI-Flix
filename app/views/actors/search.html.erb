<div class="center">
  <h3>AI-Flix Contains 206,172 Actors</h3>
  <h3>Search Actor By Name</h3>

  <!-- Search Form -->
  <%= form_tag search_actors_path, method: :get do %>

    <p><%= label_tag :name, "Actor Name" %><br>
    <%= text_field_tag :name, params[:name] %></p>

    <p><%= submit_tag "Search" %></p>
  <% end %>
</div>

<div class="list">
  <% if @actors %>
    <h3 class="list-title">We found <%= @actors.count %> Actors</h3>
    
    <% @actors.each do |a| %>
      <p><%= link_to actor_link(a.name, a.birth), actor_path(a) %></p>
    <% end %>

    <%= will_paginate @actors %>
  <% end %>
</div>
