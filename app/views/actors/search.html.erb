<div class="form">
  <h3>AI-Flix contains 1,044,499 Actors</h3>
  <h3>Search Actor by Name or Birth Year</h3>

  <!-- Search Form -->
  <%= form_tag search_path, method: :get do %>

    <p><%= label_tag :name, "Actor Name" %><br>
    <%= text_field_tag :name, params[:name] %></p>

    <p><%= label_tag :year, "Birth Year" %><br>
    <%= select_year 0, start_year: 1800, end_year: 2020, prompt: "Select Year" %></p>

    <p><%= submit_tag "Search" %></p>
  <% end %>
</div>

<div class="list">
  <% if @actors %>
    <h3 id="list_title">We found <%= @actors.count %> Actors</h3>
    
    <% @actors.each do |a| %>
      <p><%= link_to "#{a.name} - Born: #{a.birth}", actor_path(a) %></p>
    <% end %>

    <%= will_paginate @actors %>
  <% end %>
</div>
