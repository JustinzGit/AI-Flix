<div class="title">
  <h3><%= @actor[:name] %></h3>
</div>

<div class="image">
  <p><%= image_tag "https://image.tmdb.org/t/p/w300/#{@actor[:image]}" %></p>
</div>

<div class="data">
  <p><b>Birthday:</b> <%= format_date(@actor[:birthday]) %></p>
  <p><b>Hometown:</b> <%= @actor[:birthplace] %></p>
  <p><b>Deathday</b> <%= @actor[:deathday].nil? ? "Still Living" : format_date(@actor[:deathday]) %></p>

  <h3>Biography </h3>
  <p id="main_paragraph"><%= @actor[:biography] %></p>
</div>

<div class="list">
  <h3 id="list_title">Movies</h3>
    <% @movies.each do |m| %>
      <p><%= link_to m.title, movie_path(m) %></p>
    <% end %><br>
  <h3 id="list_title">Learn More</h3>
  <p><%= link_to "IMDB Profile", "https://imdb.com/name/#{@actor[:imdb_id]}", target: :_blank %></p>
</div>
