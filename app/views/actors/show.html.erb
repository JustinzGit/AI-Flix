<div class="title">
  <h3><%= @actor[:name] %></h3>
</div>

<div class="image">
  <p><%= image_tag "https://image.tmdb.org/t/p/w300/#{@actor[:image]}" %></p>
</div>

<div class="data">
  <h3>Birthday</h3>
  <%= format_date(@actor[:birthday]) %>

  <h3>Hometown</h3>
  <%= @actor[:birthplace] %>

  <h3>Deathday</h3>
  <%= @actor[:deathday].nil? ? "Still Living" : format_date(@actor[:deathday]) %>

  <h3>Biography</h3>
  <p><%= @actor[:biography] %></p>
</div>

<div class="list">
  <h3 id="list_title">Movies</h3>
    <% @movies.each do |m| %>
      <%= link_to m.title, movie_path(m) %>
    <% end %>
  <h3 id="list_title">Learn More</h3>
  <p><%= link_to "IMDB Profile", "https://imdb.com/name/#{@actor[:imdb_id]}", target: :_blank %></p>
</div>
