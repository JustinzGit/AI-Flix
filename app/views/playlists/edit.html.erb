<div id="edit_playlist">
    <%= form_with model: @playlist do |f| %>
        <p><%= f.label :name, "Playlist Name" %>
        <%= f.text_field :name %></p>
        <%= f.hidden_field :user_id, value: current_user.id %>
    
        <%= f.collection_check_boxes(:movie_ids, @playlist.movies, :id, :title) do |b| %>
            <%= b.check_box + " " + b.label %><br>
        <% end %>

        <p><%= f.submit "Edit Playlist" %></p>
    <% end %>
</div>
