<div class="section">
  <div class="vertically-centered w-container">
    <h1 class="white-heading"><%= @playlist.name %></h1>
      <%= display_movies_in_playlist(@playlist) %>
      <%= link_to("Search Movies", search_movies_path, class: "red-link") %>
      <%= link_to("Edit Playlist", edit_playlist_path(@playlist), class: "red-link top-margin") %>
      <%= button_to("Delete Playlist", playlist_path(@playlist), method: :delete, class: "delete-button w-button") %>
  </div>
</div>