<div>
  <h3><%= current_user.username %>'s Playlists</h3>
  <p><%= link_to "Create New Playlist", new_user_playlist_path %></p>
</div>

<div class="list">
  <% if @playlists.empty? %>
    <p>You Don't Have Any Playlists!</p>
  <% else %>
    <% @playlists.each do |p| %>
      <p><%= link_to p.name, user_playlist_path(current_user, p) %></p>
    <% end %>
  <% end %>
</div>
