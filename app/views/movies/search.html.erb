<div >
  <h3>AI-Flix Contains 45,466 Movies</h3>
  <h3>Search Movie By Title</h3>

  <%= form_tag search_movies_path, method: :get do %>

    <p><%= label_tag :title, "Movie Title" %><br>
    <%= text_field_tag :title, params[:title] %></p>

    <p><%= submit_tag "Search" %></p>
  <% end %>
</div>

<div class="list">
  <% if @movies %>
    <h3 class="list-title">We found <%= @movies.count %> Movies</h3>
    
    <% @movies.each do |m| %>
      <p><%= link_to "#{m.title}", movie_path(m) %></p>
    <% end %>

    <%= will_paginate @movies %>
  <% end %>
</div>
