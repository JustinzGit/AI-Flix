<div class="center">
  <h3>AI-Flix contains 344,276 Movies</h3>
  <h3>Search Movie by Name or by Year Released</h3>

  <%= form_tag search_movies_path, method: :get do %>

    <p><%= label_tag :title, "Movie Begins With" %><br>
    <%= text_field_tag :title, params[:title] %></p>

    <p><%= label_tag :year, "Year Released" %><br>
    <%= select_year 0, start_year: 1970, end_year: 2115, prompt: "Select Year" %></p>

    <p><%= submit_tag "Search" %></p>
  <% end %>
</div>

<div class="list">
  <% if @movies %>
    <h3 class="list-title">We found <%= @movies.count %> Movies</h3>
    
    <% @movies.each do |m| %>
      <p><%= link_to "#{m.title} - #{m.year}", movie_path(m) %></p>
    <% end %>

    <%= will_paginate @movies %>
  <% end %>
</div>
