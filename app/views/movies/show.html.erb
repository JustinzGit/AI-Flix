<div class="title">
  <h3><%= @movie[:title] %></h3>
</div>

<p id="tagline"><%= @movie[:tagline] %></p>

<div class="image">
  <%= image_tag "https://image.tmdb.org/t/p/w300/#{@movie[:image]}" %>
</div>

<div class="center">
  <h3>Movie Facts</h3>
  <p><b>Released On:</b> <%= movie_date(@movie) %></p>
  <p><b>Movie Budget:</b> <%= number_to_currency(@movie[:budget]) %></p>
  <p><b>Movie Profit:</b> <%= number_to_currency(@movie[:revenue]) %></p>

  <h3>Overview</h3>
  <p class="main-paragraph"><%= @movie[:overview] %></p>
</div>

<div class="list">
  <h3 class="list-title">Actors</h3>
    <% @actors.each do |a| %>
      <p><%= link_to a.name, actor_path(a) %></p>
    <% end %><br>

  <h3 class="list-title">Learn More</h3>
  <p><%= link_to "IMDB Profile", "https://imdb.com/title/#{@movie[:imdb_id]}", target: :_blank %></p>
</div>


<div class="list">
  <% if !@movie.reviews.empty? %>
    <p class="list-title">Movie Reviews</p>
    <% @movie.reviews.each do |r| %>
        <p><%= r.user.username %> Says: "<%= r.user_review %>"</p>
        <% if r.user_id == current_user.id %>
          <%= button_to "Remove Review", review_path(r.id), method: :delete %>
        <% end %>
    <% end %>
  <% end %>
</div>

<div class="center">
  <p>Leave A Movie Review</p>
  <%= form_tag reviews_path, :method => "POST" do %>
    <p><%= text_area_tag "review[user_review]" %></p>

    <%= hidden_field_tag "review[user_id]", current_user.id %>
    <%= hidden_field_tag "review[movie_id]", @movie.id %>

    <p><%= submit_tag "Submit Review" %></p>
  <% end %><br>

  <p>Add Movie to Playlist</p>
  <p><%= link_to "Add to Playlist", select_movie_path(@movie) %></p>
</div>
