<%= javascript_pack_tag 'ai_lists' %>
<div class="title">
  <h3>Generate a Movie Path</h3>
</div>

<p>AI-Flix generates a movie path by finding the shortest path of movies that connect two actors.</p>

<%= form_with url: '/actors/search', method: :get do |f| %>
    <p><%= f.label :query, "Actor Name" %><br>
    <%= f.text_field :query %>
    <%= f.hidden_field :render, value: new_ai_list_path %>
    <p><%= f.submit "Search" %></p>
<% end %>

<div id="actors_selection">
  <%= display_actor_selection(@actors) %>
</div>