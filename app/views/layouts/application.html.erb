<!DOCTYPE html>
<html>
  <head>
    <title>AI-Flix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
    <% if logged_in? %>
      <div class="navbar">
        <%= link_to "Home", homepage_path %>
        <%= link_to "My Playlists", playlists_path %>
        <%= link_to "Actors", actors_path %>
        <%= link_to "Movies", movies_path %>
        <%= link_to "Log Out", logout_path %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="alert"><%= flash[:alert] %></div>
    <% end %>

    <%= yield %>
  </body>
</html>
